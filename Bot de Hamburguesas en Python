hamburgesas_disponibles = 99
print("Bienvenido,Â¿Que queria?")
hamburgesas = int(input())
disponibles = hamburgesas_disponibles - hamburgesas
if hamburgesas < 1:
    print("El numero de hamburguesas debe ser mayor a 0")
elif hamburgesas <= 5:
    print("Menudos gochos")
    print("Excelente eleccion!,ahora mismo se las preparo")
    print(f"Nos quedan {disponibles} hamburgesas ahora mismo")
    print("Buen aprovecho,Hasta la proxima!")
elif hamburgesas <= 10:
    print("Santa madona!")
    print("Excelente eleccion!,ahora mismo se las preparo")
    print(f"Nos quedan {disponibles} hamburgesas ahora mismo")
    print("Buen aprovecho,Hasta la proxima!")
elif hamburgesas > hamburgesas_disponibles:
    print("Lo sentimos,No tenemos tanta disponibilidad")
elif hamburgesas > 10:
    print("Si quiere realizar este pedido tan grande debera avisar con una hora de antelacion.")
    print("Muchisimas Gracias por todo,Un Saludo.")
